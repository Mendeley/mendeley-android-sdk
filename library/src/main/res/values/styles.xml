<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="MendeleySDKBaseTheme"  parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="MendeleySDKTheme" parent="MendeleySDKBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:editTextStyle">@style/CustomEditText</item>
        
        <item name="colorAccent">#9d1620</item>
    </style>

    <!-- title labels -->
    <style name="CustomTitleLabel" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor"> #000000 </item>
        <item name="android:textStyle"> bold </item>
    </style>

    <!-- edit texts -->
    <style name="CustomEditText" parent="@android:style/Widget.EditText">
    </style>


    <!-- error field style -->
    <style name="CustomErrorField" parent="android:TextAppearance.DeviceDefault.Small">
       <item name="android:textColor"> #FF0000 </item>
    </style>

</resources>
